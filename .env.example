# Database Configuration
POSTGRES_PASSWORD=ceramic_dev_password
DATABASE_URL=postgresql://ceramic_user:ceramic_dev_password@localhost:5432/ceramic_materials

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# External API Keys
MATERIALS_PROJECT_API_KEY=your_mp_api_key_here

# HDF5 Storage
HDF5_DATA_PATH=./data/hdf5

